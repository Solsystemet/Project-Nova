<div class="modal" id="modal">
  <div class="modal-header">
    <div class="modal-title">Example Modal</div>
    <button data-close-button class="close-button">&times;</button>
  </div>
  <div class="modal-body">
    <div id="todo-form">
      <label>Description</label>
      <br />
      <input
        class="issue-description"
        type="text"
        placeholder="Describe issue here!"
        contenteditable="plaintext-only"
      />
      <br />
      <select class="modal-priority">
        <option value="low">Low</option>
        <option value="medium">Medium</option>
        <option value="high">High</option>
        <option value="urgent">Urgent</option>
      </select>
      <select class="modal-lead-responsibility"></select>
      <div class="dropdown">
        <input
          id="dropdownButton"
          type="button"
          class="dropdown-button"
          value="Dropdown"
        />
        <div id="options" class="dropdown-content">
          <input class="option" type="checkbox" id="option" value="Analysis" />
          <label for="Analysis">Analysis</label><br />
          <input class="option" type="checkbox" id="option" value="Writing" />
          <label for="Writing">Writing</label><br />
          <input class="option" type="checkbox" id="option" value="Review" />
          <label for="Review">Review</label><br />
          <input
            class="option"
            type="checkbox"
            id="option"
            value="Production"
          />
          <label for="Production">Production</label><br />
        </div>
      </div>
      <button id="btn-issue-create" type="submit">Create Issue</button>
    </div>
  </div>
</div>
